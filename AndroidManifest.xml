            android:screenOrientation="portrait"
            android:hardwareAccelerated="true" ></activity>
        <activity android:name="PhotoGridViewActivity"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="true"></activity>
        <activity android:name="TrailerListViewActivity"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="true"></activity>
